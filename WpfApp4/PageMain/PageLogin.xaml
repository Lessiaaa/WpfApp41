<Page x:Class="WpfApp4.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Вход">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="320" Margin="78,10,0,0" VerticalAlignment="Top" Width="590">
            <TextBlock TextWrapping="Wrap" Text="Логин"/>
            <TextBox x:Name="txbLogin" Height="23" TextWrapping="Wrap"/>
            <TextBlock TextWrapping="Wrap" Text="Пароль"/>
            <PasswordBox x:Name="psbPassword"/>
            <Button Content="Войти" Click="Button_Click"/>
            <Button Content="Регистрация" Click="Button_Click_1"/>
            <Button Content="Режим гостя" Click="Button_Click_2"/>
        </StackPanel>

    </Grid>
</Page>
